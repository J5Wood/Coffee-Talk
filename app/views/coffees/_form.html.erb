<%= form_for coffee do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, brands, :id, :name, include_blank: true, selected: coffee.brand_id || params[:brand_id] %><br>

    <%= render partial: "new_brand", locals: {f: f, coffee: coffee} if !params[:brand_id] %>

    <%= f.label :roast %>
    <%= f.radio_button :roast, 1 %>
    <%= f.radio_button :roast, 2 %>
    <%= f.radio_button :roast, 3 %>
    <%= f.radio_button :roast, 4 %>
    <%= f.radio_button :roast, 5 %><br>
     
    <%= f.label :origin %>
    <%= f.text_field :origin %><br>
     
    <%= f.label :notes %>
    <%= f.text_area :notes %><br>
     
    <%= f.label :stars %>
    <%= f.radio_button :stars, 1 %>
    <%= f.radio_button :stars, 2 %>
    <%= f.radio_button :stars, 3 %>
    <%= f.radio_button :stars, 4 %>
    <%= f.radio_button :stars, 5 %><br>
    <%= f.submit %>
<% end %>
     