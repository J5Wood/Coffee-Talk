<%= form_for coffee do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, brands, :id, :name, include_blank: true %><br>

    <%= f.fields_for :brand_attributes, coffee.brand do |brand| %>

        <%= brand.label :name, "New Brand" %>
        <%= brand.text_field :name, value: "" %><br>
        
        <%= brand.label :location, "New Brand Location" %>
        <%= brand.text_field :location, value: "" %><br>

    <% end 
    %>
    <%= f.label :roast %>
    <%= f.number_field :roast %><br>
     
    <%= f.label :origin %>
    <%= f.text_field :origin %><br>
     
    <%= f.label :notes %>
    <%= f.text_area :notes %><br>
     
    <%= f.label :stars %>
    <%= f.number_field :stars %><br>
     
    <%= f.submit %>
<% end %>
     