<h1>Log In!</h1>
<br>
<%= form_for @user, url: login_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, value="Confirm Password" %>
    <%= f.password_field :password_confirmation %><br>
    
    <%= f.submit "Log In" %>
<% end %>